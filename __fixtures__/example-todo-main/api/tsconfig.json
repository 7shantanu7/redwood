{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*",
        "../.redwood/mirror/api/src/*"
      ]
    },
    "rootDirs": [
      "./src",
      "../.redwood/mirror/api/src"
    ],
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src", "../.redwood/**/*"]
}
